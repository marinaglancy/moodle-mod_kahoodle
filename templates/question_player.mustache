<div class="container">
    <div class="row mb-3">
        <div class="col-12 options-container">
            {{#options}}
                <button class="mod_kahoodle_option mod_kahoodle_option{{id}} card mb-2 w-100" data-action="answer" data-questionid="{{questionid}}"
                        data-optionid="{{id}}" {{#isanswered}}disabled{{/isanswered}}>
                    <span class="card-body">
                        {{#isanswer}} X {{/isanswer}}
                        {{{text}}}
                    </span>
                </button>
            {{/options}}
        </div>
    </div>
</div>
