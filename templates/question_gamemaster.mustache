{{!
    @template mod_kahoodle/question_gamemaster

    TODO describe template question_gamemaster

    Example context (json):
    {
        "image": "https://raw.githubusercontent.com/moodle/moodle/MOODLE_405_STABLE/mod/feedback/pix/monologo.svg",
        "question": "What is 2 + 2?",
        "options": [
            {"id": 1, "text": "3"},
            {"id": 2, "text": "4"},
            {"id": 3, "text": "5"},
            {"id": 4, "text": "22"}
        ]
    }
}}
<div class="container">
    {{#image}}
        <div class="row mb-3">
            <div class="col-12 text-center">
                <img src="{{image}}" alt="Question image" class="img-fluid">
            </div>
        </div>
    {{/image}}

    <div class="row mb-4">
        <div class="col-12">
            <div class="question-text h1">{{{question}}}</div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            {{#options}}
                <div class="mod_kahoodle_option mod_kahoodle_option{{id}} card mb-2">
                    <div class="card-body text-center">{{{text}}}</div>
                </div>
            {{/options}}
        </div>
    </div>

    <div class="row">
        <div class="col-12 text-center">
            <button class="btn btn-primary" data-action="transition">Next</button>
        </div>
    </div>
</div>
